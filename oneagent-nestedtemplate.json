{
    "mode": "Indexed",
    "policyRule": {
        "if": {
            "allOf": [{
                    "field": "type",
                    "equals": "Microsoft.Compute/virtualMachines"
                },
                {
                    "field": "location",
                    "equals": "eastus"
                },
                {
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.osType",
                    "equals": "Linux"
                }
            ]
        },
        "then": {
            "effect": "deployIfNotExists",
            "details": {
                "type": "Microsoft.Compute/virtualMachines",
                "deploymentScope": "Subscription",
                "name": "current",
                "existenceCondition": {
                    "allOf": [{
                            "field": "Microsoft.Compute/virtualMachines/extensions/type",
                            "equals": "OmsAgentForLinux"
                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/extensions/publisher",
                            "equals": "Microsoft.EnterpriseCloud.Monitoring"
                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/extensions/provisioningState",
                            "equals": "Succeeded"
                        }
                    ]
                },
                "roleDefinitionIds": [
                    "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c",
                    "/providers/microsoft.authorization/roleDefinitions/92aaf0da-9dab-42b6-94a3-d43ce8d16293"
                ],
                "deployment": {
                    "location": "westeurope",
                    "properties": {
                        "mode": "incremental",
                        "template": {
                            "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                            "contentVersion": "1.0.0.1",
                            "parameters": {
                                "location": {
                                    "type": "string"
                                },
                                "vmName": {
                                    "type": "string"
                                },
                                "resourceGroup": {
                                    "type": "string"
                                }
                            },
                            "variables": {
                                "defaultRGName": "[concat('defaultresourcegroup-', variables('displayName')[variables('pairedLocations')[parameters('location')]])]",
                                "defaultRGLocation": "[variables('pairedLocations')[parameters('location')]]",
                                "subscriptionId": "[subscription().subscriptionId]",
                                "locationCode": "[variables('displayName')[variables('pairedLocations')[parameters('location')]]]",
                                "dataCollectionRuleId": "[concat('/subscriptions/', variables('subscriptionId'), '/resourceGroups/', variables('defaultRGName'), '/providers/Microsoft.Insights/dataCollectionRules/', 'defaultdataCollectionRule')]",
                                "displayName": {
                                    "eastus": "EUS"
                                },
                                "pairedLocations": {
                                    "eastus": "eastus"
                                },
                                "workspaceName": "[concat('defaultworkspace', variables('subscriptionId'),'-', variables('locationCode'))]",
                                "workspaceId": "[concat('/subscriptions/', variables('subscriptionId'), '/resourceGroups/', variables('defaultRGName'), '/providers/Microsoft.OperationalInsights/workspaces/', variables('workspaceName'))]",
                                "vmResourceId": "[concat('/subscriptions/', variables('subscriptionId'), '/resourceGroups/', parameters('resourceGroup'), '/providers/Microsoft.Compute/virtualMachines/', parameters('vmName'))]",
                                "vmExtensionPublisher": "Microsoft.Azure.Monitor",
                                "vmExtensionType": "AzureMonitorLinuxAgent",
                                "vmExtensionTypeHandlerVersion": "0.9",
                                "vmExtensionPublisherSecurity": "Microsoft.Azure.Security.Monitoring",
                                "vmExtensionTypeSecurity": "AzureSecurityLinuxAgent",
                                "vmExtensionTypeHandlerVersionSecurity": "0.1"
                            },
                            "resources": [{
                                    "type": "Microsoft.Resources/resourceGroups",
                                    "apiVersion": "2019-05-01",
                                    "name": "[variables('defaultRGName')]",
                                    "location": "[variables('defaultRGLocation')]",
                                    "properties": {}
                                },
                                {
                                    "type": "Microsoft.Resources/deployments",
                                    "apiVersion": "2017-05-10",
                                    "name": "workspaceCreation",
                                    "resourceGroup": "[variables('defaultRGName')]",
                                    "dependsOn": [
                                        "[resourceId('Microsoft.Resources/resourceGroups', variables('defaultRGName'))]"
                                    ],
                                    "properties": {
                                        "mode": "Incremental",
                                        "template": {
                                            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                            "contentVersion": "1.0.0.0",
                                            "parameters": {},
                                            "variables": {},
                                            "resources": [{
                                                "apiVersion": "2015-11-01-preview",
                                                "type": "Microsoft.OperationalInsights/workspaces",
                                                "name": "[variables('workspaceName')]",
                                                "location": "[variables('defaultRGLocation')]",
                                                "properties": {
                                                    "features": {
                                                        "searchVersion": 1
                                                    }
                                                }
                                            }]
                                        }
                                    }
                                },
                                {
                                    "apiVersion": "2017-05-10",
                                    "name": "dataCollectionRules",
                                    "type": "Microsoft.Resources/deployments",
                                    "resourceGroup": "[variables('defaultRGName')]",
                                    "dependsOn": [
                                        "workspaceCreation"
                                    ],
                                    "properties": {
                                        "expressionEvaluationOptions": {
                                            "scope": "inner"
                                        },
                                        "mode": "Incremental",
                                        "parameters": {
                                             "location": {
                                                "value": "[parameters('location')]"
                                            },
                                            "workspaceId": {
                                                "value": "[variables('workspaceId')]"
                                            }
                                        },
                                        "template": {
                                            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                            "contentVersion": "1.0.0.0",
                                            "parameters": {
                                                "location": {
                                                    "type": "string"
                                                },
                                                "workspaceId": {
                                                    "type": "string"
                                                }
                                            },
                                            "variables": {},
                                            "resources": [{
                                                "type": "Microsoft.Insights/dataCollectionRules",
                                                "name": "defaultdataCollectionRule",
                                                "location": "[parameters('location')]",
                                                "apiVersion": "2019-11-01-preview",
                                                "properties": {
                                                    "dataSources": {
                                                        "extensions": [{
                                                            "stream": "Microsoft-ASC-ExtensionData",
                                                            "extensionName": "SecurityMonitoringForLinux",
                                                            "extensionSettings": {},
                                                            "name": "AscLinuxDataSource"
                                                        }]
                                                    },
                                                    "destinations": {
                                                        "logAnalytics": [{
                                                            "workspaceResourceId": "[parameters('workspaceId')]",
                                                            "workspaceId": "[reference(parameters('workspaceId'), '2015-03-20').customerId]",
                                                            "name": "LogAnalyticsDest"
                                                        }]
                                                    },
                                                    "dataFlows": [{
                                                        "streams": [
                                                            "Microsoft-ASC-ExtensionData"
                                                        ],
                                                        "destinations": [
                                                            "LogAnalyticsDest"
                                                        ]
                                                    }]
                                                }
                                            }]
                                        }
                                    }
                                },
                                {
                                    "apiVersion": "2017-05-10",
                                    "name": "dataCollectionRulesAssociation",
                                    "type": "Microsoft.Resources/deployments",
                                    "resourceGroup": "[parameters('resourceGroup')]",
                                    "dependsOn": [
                                        "dataCollectionRules"
                                    ],
                                    "properties": {
                                        "expressionEvaluationOptions": {
                                            "scope": "inner"
                                        },
                                        "mode": "Incremental",
                                        "parameters": {
                                             "dataCollectionRuleId": {
                                                "value": "[variables('dataCollectionRuleId')]"
                                            },
                                            "vmName": {
                                                "value": "[parameters('vmName')]"
                                            }
                                        },
                                        "template": {
                                            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                            "contentVersion": "1.0.0.0",
                                            "parameters": {
                                                 "dataCollectionRuleId": {
                                                    "type": "string"
                                                },
                                                "vmName": {
                                                    "type": "string"
                                                }
                                            },
                                            "variables": {},
                                            "resources": [{
                                                "type": "Microsoft.Compute/virtualMachines/providers/dataCollectionRuleAssociations",
                                                "name": "[concat(parameters('vmName'),'/Microsoft.Insights/', 'defaultAssociation')]",
                                                "apiVersion": "2019-11-01-preview",
                                                "properties": {
                                                    "dataCollectionRuleId": "[parameters('dataCollectionRuleId')]"
                                                }
                                            }]
                                        }
                                    }
                                },
                                {
                                    "apiVersion": "2017-05-10",
                                    "name": "AzureMonitorLinuxAgent",
                                    "type": "Microsoft.Resources/deployments",
                                    "resourceGroup": "[parameters('resourceGroup')]",
                                    "dependsOn": [
                                        "dataCollectionRules"
                                    ],
                                    "properties": {
                                        "expressionEvaluationOptions": {
                                            "scope": "inner"
                                        },
                                        "mode": "Incremental",
                                        "parameters": {
                                            "vmName": {
                                                "value": "[parameters('vmName')]"
                                            },
                                            "location": {
                                                "value": "[parameters('location')]"
                                            },
                                             "vmExtensionPublisher": {
                                                "value": "[variables('vmExtensionPublisher')]"
                                            },
                                            "vmExtensionType": {
                                                "value": "[variables('vmExtensionType')]"
                                            },
                                            "vmExtensionTypeHandlerVersion": {
                                                "value": "[variables('vmExtensionTypeHandlerVersion')]"
                                            }
                                        },
                                        "template": {
                                            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                            "contentVersion": "1.0.0.0",
                                            "parameters": {
                                                 "vmName": {
                                                    "type": "string"
                                                },
                                                "location": {
                                                    "type": "string"
                                                },
                                                "vmExtensionPublisher": {
                                                    "type": "string"
                                                },
                                                "vmExtensionType": {
                                                    "type": "string"
                                                },
                                                "vmExtensionTypeHandlerVersion": {
                                                    "type": "string"
                                                }
                                            },
                                            "variables": {},
                                            "resources": [{
                                                "type": "Microsoft.Compute/virtualMachines/extensions",
                                                "name": "[concat(parameters('vmName'), '/', 'AzureMonitorLinuxAgent')]",
                                                "apiVersion": "2019-03-01",
                                                "location": "[parameters('location')]",
                                                "properties": {
                                                    "publisher": "[parameters('vmExtensionPublisher')]",
                                                    "type": "[parameters('vmExtensionType')]",
                                                    "typeHandlerVersion": "[parameters('vmExtensionTypeHandlerVersion')]",
                                                    "autoUpgradeMinorVersion": true,
                                                    "settings": {}
                                                }
                                            }]
                                        }
                                    }
                                },
                                {
                                    "apiVersion": "2017-05-10",
                                    "name": "AzureSecurityLinuxAgent",
                                    "type": "Microsoft.Resources/deployments",
                                    "resourceGroup": "[parameters('resourceGroup')]",
                                    "dependsOn": [
                                        "dataCollectionRules"
                                    ],
                                    "properties": {
                                        "expressionEvaluationOptions": {
                                            "scope": "inner"
                                        },
                                        "mode": "Incremental",
                                        "parameters": {
                                            "vmName": {
                                                "value": "[parameters('vmName')]"
                                            },
                                            "location": {
                                                "value": "[parameters('location')]"
                                            },
                                            "vmExtensionPublisherSecurity": {
                                                "value": "[variables('vmExtensionPublisherSecurity')]"
                                            },
                                            "vmExtensionTypeSecurity": {
                                                "value": "[variables('vmExtensionTypeSecurity')]"
                                            },
                                            "vmExtensionTypeHandlerVersionSecurity": {
                                                "value": "[variables('vmExtensionTypeHandlerVersionSecurity')]"
                                            }
                                        },
                                        "template": {
                                            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                            "contentVersion": "1.0.0.0",
                                            "parameters": {
                                                "vmName": {
                                                    "type": "string"
                                                },
                                                "location": {
                                                    "type": "string"
                                                },
                                                "vmExtensionPublisherSecurity": {
                                                    "type": "string"
                                                },
                                                "vmExtensionTypeSecurity": {
                                                    "type": "string"
                                                },
                                                "vmExtensionTypeHandlerVersionSecurity": {
                                                    "type": "string"
                                                }
                                            },
                                            "variables": {},
                                            "resources": [{
                                                "type": "Microsoft.Compute/virtualMachines/extensions",
                                                "name": "[concat(parameters('vmName'), '/', 'AzureSecurityLinuxAgent')]",
                                                "apiVersion": "2019-03-01",
                                                "location": "[parameters('location')]",
                                                "properties": {
                                                    "publisher": "[parameters('vmExtensionPublisherSecurity')]",
                                                    "type": "[parameters('vmExtensionTypeSecurity')]",
                                                    "typeHandlerVersion": "[parameters('vmExtensionTypeHandlerVersionSecurity')]",
                                                    "autoUpgradeMinorVersion": true,
                                                    "settings": {},
                                                    "protectedsettings": {
                                                        "vsaIngestionEndpoint": "https://shavsadevsf01.westus2.cloudapp.azure.com:443/api/assets/{ASSETID}/scanOrders?api-version=v1",
                                                        "vsaClientConfigURI": "https://shavsadevstrgtc1.blob.core.windows.net/tenants/validtenantconfig",
                                                        "vsaIngestionAPIKey": "1219c206-b4d5-4ae6-83d0-9cc993aee5a5",
                                                        "vsaManifestStoreEndpoint": "https://shavamanifestcusprod1.blob.core.windows.net/50a1a297-d97e-4c80-a44d-8fdeb2f7946e/"
                                                    }
                                                }
                                            }]
                                        }
                                    }
                                }
                            ]
                        },
                        "parameters": {
                            "location": {
                                "value": "[field('location')]"
                            },
                            "vmName": {
                                "value": "[field('name')]"
                            },
                            "resourceGroup": {
                                "value": "[resourceGroup().name]"
                            }
                        }
                    }
                }
            }
        }
    },
    "parameters": {}
}